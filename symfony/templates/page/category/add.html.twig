{% extends 'base.html.twig' %}

{% block title %}Add category{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('page-addCategory') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('page-addCategory') }}
{% endblock %}

{% block body %}
    <div class="container" style="width: 75%">
        <div class="row">
            <div class="col">
                <div class="card bg-dark">
                    <div class="card-header text-white">
                        Add new Category
                    </div>

                    <div class="card-body bg-white">

                    {{ form_start(addCategoryForm) }}

                    <ul class="list-group list-group-flush">

                        <li class="list-group-item">
                            <div class="form-group">
                                {{ form_row(addCategoryForm.name, {
                                    attr: {
                                        class: "form-control"
                                    }
                                }) }}
                            </div>
                            <div class="form-group">
                                {{ form_row(addCategoryForm.parent, {
                                    attr: {
                                        class: "form-control selectpicker w-100",
                                        "data-live-search": "true",
                                        "data-api-url": selectApiUrlCategories
                                    }
                                }) }}
                            </div>
                            {{ form_row(addCategoryForm.submitButton) }}

                        </li>
                    </ul>
                    {{ form_end(addCategoryForm) }}
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}
