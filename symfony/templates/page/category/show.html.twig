{% extends 'base.html.twig' %}

{% block title %}Show category{% endblock %}


{% block stylesheets %}
    {{ encore_entry_link_tags('page-showCategory') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('page-showCategory') }}
{% endblock %}

    {% block body %}
    <div class="container-fluid">

        <div class="card text-center mb-5">
            <div class="card-header">
                Category detail
            </div>
            <div class="card-body">
                <h5 class="card-title"><strong>Name: </strong>{{ category.name }}</h5>
                <p class="card-text"><strong>Path: </strong> {{ category.getAncestors()
                                            |map(
                                                (ancestor, index) =>
                                            index == 0
                                            ? "<strong><a class='text-muted' href='#{ path('show_category', { 'id': ancestor.id }) }'>#{ancestor.name}</a></strong>"
                                            : "<a class='text-muted' href='#{ path('show_category', { 'id': ancestor.id }) }'>#{ancestor.name}</a>"
                                            )
                                            |reverse
                                            |join(' > ')
                                            |raw }}</p>
            </div>

    {#        <div class="card-footer text-muted">#}
    {#        </div>#}
        </div>
    </div>
    <div class="container">
        <div class="mt-3" data-data-table data-options='{{ datatable_settings(datatable) }}'></div>
    </div>
{% endblock %}
