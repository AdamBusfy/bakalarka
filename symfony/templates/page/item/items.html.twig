{% extends 'base.html.twig' %}
{% block title %}Items{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('page-items') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('page-items') }}
{% endblock %}

{% block body %}
    <div class="container-fluid" style="width: 95%">
        {{ include('layout/modal/addItemToLocation.html.twig') }}
        {{ include('layout/modal/removeItemFromLocation.html.twig') }}

        <div class="row">
            <div class="col">
                <div >
                    <a href="{{ path('add_item') }}" type="button" class="btn btn-success btn-lg"><span
                                class="fa fa-plus"></span> Add new item </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h2 class="text-secondary mt-3 mb-3">Unassigned items</h2>
                <div class="card mt-3 mb-5">
                    <div class="card-body">
                        {{ form_start(filterForm_left) }}
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    {{ form_row(filterForm_left.name, {
                                        attr: {
                                            class: "selectpicker form-control"
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="form-group">
                                    {{ form_row(filterForm_left.category, {
                                        attr: {
                                            class: "selectpicker form-control",
                                            "data-live-search": "true"
                                        }
                                    }) }}
                                </div>
                            </div>
{#                            <div class="col-3">#}

{#                            </div>#}
                            <div class="col-4 justify-content-center align-self-center">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    {{ form_row(filterForm_left.submit, {
                                        label: "###ICON### apply filter",
                                        attr: {
                                            class: "form-control btn btn-outline-secondary btn-xs"
                                        }
                                    }) | replace({"###ICON###": "<span class='fa fa-filter'></span>"}) | raw }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                                    <span class="input-group-text" id=""><i
                                                                class="fa fa-calendar"></i></span>
                                            {{ form_row(filterForm_left.startDateTime) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                                    <span class="input-group-text" id=""><i
                                                                class="fa fa-calendar"></i></span>
                                            {{ form_row(filterForm_left.endDateTime) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                            </div>
                        </div>
                        {{ form_end(filterForm_left) }}
                    </div>
                </div>

                <div class="mt-3" data-data-table data-options='{{ datatable_settings(datatable_left) }}'></div>
            </div>
            <div class="col">
                <h2 class="text-secondary mt-3 mb-3">Assigned items</h2>
                <div class="card mt-3 mb-5">
                    <div class="card-body">
                        {{ form_start(filterForm_right) }}
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    {{ form_row(filterForm_right.name, {
                                        attr: {
                                            class: "selectpicker form-control"
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    {{ form_row(filterForm_right.location, {
                                        attr: {
                                            class: "selectpicker form-control",
                                            "data-live-search": "true"
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    {{ form_row(filterForm_right.category, {
                                        attr: {
                                            class: "selectpicker form-control",
                                            "data-live-search": "true"
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-3 justify-content-center align-self-center">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    {{ form_row(filterForm_right.submit, {
                                        label: "###ICON### apply filter",
                                        attr: {
                                            class: "form-control btn btn-outline-secondary btn-xs"
                                        }
                                    }) | replace({"###ICON###": "<span class='fa fa-filter'></span>"}) | raw }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                                    <span class="input-group-text" id=""><i
                                                                class="fa fa-calendar"></i></span>
                                            {{ form_row(filterForm_right.startDateTime) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                                    <span class="input-group-text" id=""><i
                                                                class="fa fa-calendar"></i></span>
                                            {{ form_row(filterForm_right.endDateTime) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                            </div>
                        </div>
                        {{ form_end(filterForm_right) }}
                    </div>
                </div>
                <div class="mt-3" data-data-table data-options='{{ datatable_settings(datatable_right) }}'></div>
            </div>
        </div>
    </div>

{% endblock %}