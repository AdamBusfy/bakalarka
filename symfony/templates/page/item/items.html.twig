{% extends 'base.html.twig' %}
{% block title %}Items{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('page-items') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('page-items') }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card mt-3">
                    <div class="card-body">
                        {{ form_start(filterForm) }}
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    {{ form_row(filterForm.name, {
                                        attr: {
                                            class: "selectpicker form-control"
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    {{ form_row(filterForm.location, {
                                        attr: {
                                            class: "selectpicker form-control",
                                            "data-live-search": "true"
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    {{ form_row(filterForm.category, {
                                        attr: {
                                            class: "selectpicker form-control",
                                            "data-live-search": "true"
                                        }
                                    }) }}
                                </div>
                            </div>
                            <div class="col-3 justify-content-center align-self-center">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    {{ form_row(filterForm.submit, {
                                        label: "###ICON### apply filter",
                                        attr: {
                                            class: "form-control btn btn-outline-secondary btn-xs"
                                        }
                                    }) | replace({"###ICON###": "<span class='fa fa-filter'></span>"}) | raw }}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                                    <span class="input-group-text" id=""><i
                                                                class="fa fa-calendar"></i></span>
                                            {{ form_row(filterForm.startDateTime) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <div class="input-group-prepend">
                                                    <span class="input-group-text" id=""><i
                                                                class="fa fa-calendar"></i></span>
                                            {{ form_row(filterForm.endDateTime) }}
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                            </div>
                        </div>
                        {{ form_end(filterForm) }}
                    </div>
                </div>
                <div class="mt-3 mb-4">
                    <a href="{{ path('add_item') }}" type="button" class="btn btn-success btn-xs"><span
                                class="fa fa-plus"></span> Add item </a>
                </div>

                <div class="mt-3" data-data-table data-options='{{ datatable_settings(datatable) }}'></div>


            </div>
        </div>
    </div>

{% endblock %}