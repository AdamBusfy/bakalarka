{% extends 'base.html.twig' %}
{% block title %}Items{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('page-items') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('page-items') }}
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="mt-3 mb-3">
                    <a href="{{ path('add_item') }}" type="button" class="btn btn-success btn-xs"><span
                                class="fa fa-plus"></span> Add item </a>
                </div>
                <div class="card">
                    <div class="card-body">
                        {{ form_start(filterForm) }}
                        <div class="row">
                            <div class="col-3">
                                <div class="form-group">
                                    {{ form_row(filterForm.name, {
                                        attr: {
                                            class: "selectpicker form-control"
                                        }
                                    }) }}
                                    </select>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    {{ form_row(filterForm.location, {
                                        attr: {
                                            class: "selectpicker form-control"
                                        }
                                    }) }}
                                    </select>
                                </div>
                            </div>
                            <div class="col-3">
                                <div class="form-group">
                                    {{ form_row(filterForm.category, {
                                        attr: {
                                            class: "selectpicker form-control"
                                        }
                                    }) }}
                                    </select>
                                </div>
                            </div>
                            <div class="col-3 justify-content-center align-self-center">
                                <div class="form-group">
                                    <label>&nbsp;</label>
                                    {{ form_row(filterForm.submit, {
                                        label: "###ICON### AHOJ TEST",
                                        attr: {
                                            class: "form-control btn btn-outline-secondary btn-xs"
                                        }
                                    }) | replace({"###ICON###": "<span class='fa fa-filter'></span>"}) | raw }}
                                </div>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="input-group">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text" id=""><i class="fa fa-calendar"></i></span>
                                    </div>
                                    <input type="text" class="form-control datepicker">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text ml-3" id=""><i class="fa fa-calendar"></i></span>
                                    </div>
                                    <input type="text" class="form-control datepicker">
{#                                    <div class="input-group input-daterange">#}
{#                                        <input type="text" class="form-control" value="2012-04-05">#}
{#                                        <div class="input-group-addon ml-1 mr-1">to</div>#}
{#                                        <input type="text" class="form-control" value="2012-04-19">#}
{#                                    </div>#}
                                </div>
                            </div>
                        </div>
                        {{ form_end(filterForm) }}
                    </div>
                </div>


                <div class="mt-3" data-data-table data-options='{{ datatable_settings(datatable) }}'></div>


            </div>
        </div>
    </div>

{% endblock %}