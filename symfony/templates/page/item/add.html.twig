{% extends 'base.html.twig' %}

{% block title %}Add item{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('page-addItem') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('page-addItem') }}
{% endblock %}

{% block body %}
    <div class="container" style="width: 75%">
        {{ form_start(addItemForm) }}
        <div class="form-group">
            {{ form_row(addItemForm.name, {
                attr: {
                    class: "form-control"
                }
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(addItemForm.parent, {
                attr: {
                    class: "form-control selectpicker w-100",
                    "data-live-search": "true"
                }
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(addItemForm.category, {
                attr: {
                    class: "form-control selectpicker w-100",
                    "data-live-search": "true"
                }
            }) }}
        </div>
        <div class="form-group">
            {{ form_row(addItemForm.location, {
                attr: {
                    class: "form-control selectpicker w-100",
                    "data-live-search": "true"
                }
            }) }}
        </div>
{#        <div class="form-group row">#}
