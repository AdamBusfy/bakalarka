    <body class="c-app flex-row align-items-center">
<div class="container">
    <form class="form" role="form" method="post">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                        {{ form_start(form) }}
                        <div class="card-body">
                            <h1>Register</h1>
                            <p class="text-muted">Create new account</p>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                <span class="input-group-text">
                                    <i class="c-icon fas fa-user-circle"></i>
                                </span>
                                </div>
                                {{ form_row(form.name, {'attr': {'class': 'form-control', 'label': 'false'}}) }}
                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                            <span class="input-group-text">
                                    <i class="c-icon fas fa-at"></i>
                            </span>
                                </div>
                                {{ form_row(form.email, {'attr': {'class': 'form-control'}}) }}

                            </div>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="c-icon fas fa-key"></i>
                            </span>
                                </div>
                                {{ form_row(form.password.first, {'attr': {'class':
                                    'form-control'}}) }}

                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                            <span class="input-group-text">
                                <i class="c-icon fas fa-key"></i>
                            </span></div>
                                {{ form_row(form.password.second, {'attr': {'class':
                                    'form-control'}}) }}
                            </div>
                            <button class="btn btn-block btn-primary" type="submit">Create Account</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                    <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                        <div class="card-body text-center">
                            <div class="mt-5">
                                <p>If you already have an account,<br /> feel free to login.</p>
                                <a href="{{ path('app_login') }}" class="btn btn-lg btn-outline-light mt-3"> </i>&nbsp;Login Now!</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



